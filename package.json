{
  "name": "pubsub-service",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/public/**/*.html src/public/**/*.css dist/",
    "build": "yarn clean && tsc && yarn copy-files",
    "start": "node dist/server.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "dev": "yarn clean && yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch:public\" \"yarn run start:dev\"",
    "watch-ts": "tsc -w",
    "watch:public": "copy-and-watch --watch src/**/*.html src/**/*.css dist/",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "localtunnel": "^2.0.2",
    "ngrok": "5.0.0-beta.2",
    "nodemon": "^3.0.1",
    "redis": "^4.6.7",
    "socket.io": "^4.7.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "copy-and-watch": "^0.1.6",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  }
}
